    + listHeader()
    + doShow()
}

class ListUsersController {
    + allUsers()
    + allBackofficeUsers()
}

interface RepositoryFactory {
    + newTransactionalContext()
    + users(TransactionalContext autoTx)
    + users()
    + customerUsers(TransactionalContext autoTx)
    + customerUsers()
